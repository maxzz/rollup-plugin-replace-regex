{
  "name": "rollup-plugin-replace-regex",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Replace regex strings in files while bundling",
  "license": "MIT",
  "repository": {
    "url": "rollup/plugins",
    "directory": "packages/replace"
  },
  "author": "Max <maxzz@msn.com>",
  "homepage": "https://github.com/maxzz/rollup-plugin-replace-regex",
  "bugs": "https://github.com/maxzz/rollup-plugin-replace-regex/issues",
  
  "files": [
    "dist",
    "!dist/**/*.map",
    "src",
    "types",
    "README.md"
  ],
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/es/index.js",
    "default": "./dist/cjs/index.js"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "./types/index.d.ts",

  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "prebuild": "del-cli dist",
    "predeploy": "yarn build"
  },
  "keywords": [
    "rollup",
    "plugin",
    "replace",
    "es2015",
    "npm",
    "modules"
  ],
  "peerDependencies": {
    "rollup": "^1.20.0||^2.0.0||^3.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.0.1",
    "magic-string": "^0.27.0"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^1.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "del-cli": "^5.0.0",
    "locate-character": "^2.0.5",
    "rollup": "^3.2.3",
    "source-map": "^0.7.4",
    "typescript": "^4.8.3"
  }
}
